<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        KeyDown="Window_Keydown"    
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="460" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Top">
            <TextBox x:Name="displayTextBox" Text="" IsReadOnly="True" FontSize="45" Margin="10" Width="400" Height="75" HorizontalContentAlignment="Right" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Width="Auto" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Button x:Name="Button7" Content="7" FontSize="20" HorizontalAlignment="Left" Margin="5"  VerticalAlignment="Top" Width="75" Height="75" FontFamily="Arial Black" FontWeight="Bold" />
                <Button x:Name="Button8" Content="8" FontSize="20" HorizontalAlignment="Left" Margin="5"  VerticalAlignment="Top" Width="75" Height="75" FontFamily="Arial Black" FontWeight="Bold" />
                <Button x:Name="Button9" Content="9" FontSize="20" HorizontalAlignment="Left" Margin="5"  VerticalAlignment="Top" Width="75" Height="75" FontFamily="Arial Black" FontWeight="Bold" />
                <Button x:Name="ButtonAdd" Content="+" FontSize="20" HorizontalAlignment="Left" Margin="5"  VerticalAlignment="Top" Width="75" Height="75" FontFamily="Arial Black" FontWeight="Bold" />
                <Button x:Name="ButtonClear" Content="C" FontSize="20" HorizontalAlignment="Left" Margin="5"  VerticalAlignment="Top" Width="75" Height="75" FontFamily="Arial Black" FontWeight="Bold" Click="ButtonClear_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Width="Auto" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Button x:Name="Button4" Content="4" FontSize="20" HorizontalAlignment="Left" Margin="5"  VerticalAlignment="Top" Width="75" Height="75" FontFamily="Arial Black" FontWeight="Bold" />
                <Button x:Name="Button5" Content="5" FontSize="20" HorizontalAlignment="Left" Margin="5"  VerticalAlignment="Top" Width="75" Height="75" FontFamily="Arial Black" FontWeight="Bold" />
                <Button x:Name="Button6" Content="6" FontSize="20" HorizontalAlignment="Left" Margin="5"  VerticalAlignment="Top" Width="75" Height="75" FontFamily="Arial Black" FontWeight="Bold" />
                <Button x:Name="ButtonSubstract" Content="-" FontSize="20" HorizontalAlignment="Left" Margin="5"  VerticalAlignment="Top" Width="75" Height="75" FontFamily="Arial Black" FontWeight="Bold" />
                <Button x:Name="ButtonClearEntry" Content="CE" FontSize="20" HorizontalAlignment="Left" Margin="5"  VerticalAlignment="Top" Width="75" Height="75" FontFamily="Arial" FontWeight="DemiBold" Click="ButtonClearEntry_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Width="Auto" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Button x:Name="Button1" Content="1" FontSize="20" HorizontalAlignment="Left" Margin="5"  VerticalAlignment="Top" Width="75" Height="75" FontFamily="Arial Black" FontWeight="Bold" />
                <Button x:Name="Button2" Content="2" FontSize="20" HorizontalAlignment="Left" Margin="5"  VerticalAlignment="Top" Width="75" Height="75" FontFamily="Arial Black" FontWeight="Bold" />
                <Button x:Name="Button3" Content="3" FontSize="20" HorizontalAlignment="Left" Margin="5"  VerticalAlignment="Top" Width="75" Height="75" FontFamily="Arial Black" FontWeight="Bold" />
                <Button x:Name="ButtonMultiply" Content="X" FontSize="20" HorizontalAlignment="Left" Margin="5"  VerticalAlignment="Top" Width="75" Height="75" FontFamily="Arial Black" FontWeight="Bold" />
                <Button x:Name="ButtonBackspace" Content="⌫" FontSize="22" HorizontalAlignment="Left" Margin="5"  VerticalAlignment="Top" Width="75" Height="75" FontFamily="Arial Black" FontWeight="Bold" Click="ButtonBackspace_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Width="Auto" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Button x:Name="ButtonDecimal" Content="." FontSize="20" HorizontalAlignment="Left" Margin="5"  VerticalAlignment="Top" Width="75" Height="75" FontFamily="Arial Black" FontWeight="Bold" />
                <Button x:Name="Button0" Content="0" FontSize="20" HorizontalAlignment="Left" Margin="5"  VerticalAlignment="Top" Width="75" Height="75" FontFamily="Arial Black" FontWeight="Bold"  />
                <Button x:Name="ButtonDivide" Content="/" FontSize="20" HorizontalAlignment="Left" Margin="5"  VerticalAlignment="Top" Width="75" Height="75" FontFamily="Arial Black" FontWeight="Bold" />
                <Button x:Name="ButtonEqual" Content="=" FontSize="20" HorizontalAlignment="Left" Margin="5"  VerticalAlignment="Top" Width="160" Height="75" FontFamily="Arial Black" FontWeight="Bold" Click="ButtonEqual_Click"/>
            </StackPanel>
        </StackPanel>


    </Grid>
</Window>
